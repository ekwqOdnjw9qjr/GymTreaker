<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="006.create-trainer_coaching_time-table" author="Roman">
        <createTable tableName="trainers_coaching_times">
            <column name="trainer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="coaching_time_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="trainers_coaching_times" baseColumnNames="trainer_id"
                referencedTableName="trainers" referencedColumnNames="id"
                constraintName="fk_trainer_coaching_time_trainer"/>
        <addForeignKeyConstraint
                baseTableName="trainers_coaching_times" baseColumnNames="coaching_time_id"
                referencedTableName="coaching_times" referencedColumnNames="id"
                constraintName="fk_trainer_coaching_time_coaching_time"/>
    </changeSet>
</databaseChangeLog>